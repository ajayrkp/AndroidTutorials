<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:text="Travis is ..." />

    <RadioGroup
        android1:id="@+id/rgAnswers"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView1"
        android1:layout_below="@+id/textView1"
        android1:layout_marginTop="17dp" >

        <RadioButton
            android1:id="@+id/rCrazy"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="Crazy" />

        <RadioButton
            android1:id="@+id/rSexy"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="SUPER SEXY" />

        <RadioButton
            android1:id="@+id/rBoth"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="BOTH" />
    </RadioGroup>
    
   <Button
        android1:id="@+id/bReturn"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
         android1:text="Return" />

    
    <TextView
        android1:id="@+id/tvText"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/radioGroup1"
        android1:layout_below="@+id/radioGroup1"
        android1:text="TextView" />

 </LinearLayout>